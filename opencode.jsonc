{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "@tarquinen/opencode-dcp@latest",
    "opencode-anthropic-auth"
  ],
  "instructions": [
    "CLAUDE.md"
  ],
  "permission": {
    "bash": {
      "git *": "allow",
      "git push *": "deny"
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "$CONTEXT7_API_KEY"
      ],
      "enabled": true
    }
  }
}
