{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["@tarquinen/opencode-dcp@latest", "opencode-anthropic-auth"],
  "agent": {
    "typescript-expert": {
      "model": "opencode/glm-4.7-free"
    },
    "react-expert": {
      "model": "opencode/glm-4.7-free"
    },
    "svelte-expert": {
      "model": "opencode/glm-4.7-free"
    },
    "vue-expert": {
      "model": "opencode/glm-4.7-free"
    },
    "frontend-developer": {
      "model": "opencode/glm-4.7-free"
    },
    "backend-developer": {
      "model": "opencode/glm-4.7-free"
    },
    "ux-engineer": {
      "model": "opencode/glm-4.7-free"
    },
    "ux-expert": {
      "model": "opencode/glm-4.7-free"
    },
    "accessibility-expert": {
      "model": "opencode/glm-4.7-free"
    },
    "solution-architect": {
      "model": "opencode/glm-4.7-free"
    }
  },
  "permission": {
    "bash": {
      "git *": "allow",
      "git push *": "deny"
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "$CONTEXT7_API_KEY"
      ],
      "enabled": true
    }
  }
}
